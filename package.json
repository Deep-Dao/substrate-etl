{
  "name": "substrate-etl",
  "version": "0.1.0",
  "author": "Premiurly <contact@premiurly.in>",
  "license": "Apache-2.0",
  "description": "Extract, Transform, Load Kusama/Polkadot history into a DB and provide graphql API over it",
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "Prisma",
    "Substrate",
    "Polkadot",
    "Kusama"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/Premiurly/substrate-etl",
  "scripts": {
    "build": "tsc",
    "docker": "docker build -t substrate-etl:v0.1.0 . && docker tag substrate-etl:v0.1.0 premiurly/substrate-etl:v0.1.0 && docker push premiurly/substrate-etl:v0.1.0",
    "reset": "PRISMA_ENDPOINT=http://127.0.0.1:4466 yarn prisma1 reset",
    "prisma:deploy": "PRISMA_ENDPOINT=http://127.0.0.1:4466 yarn prisma1 deploy",
    "start:local": "PRISMA_ENDPOINT=http://127.0.0.1:4466 ARCHIVE_NODE_ENDPOINT=ws://127.0.0.1:9944 MAX_LAG=1 yarn start",
    "start:polkadot": "PRISMA_ENDPOINT=http://127.0.0.1:4466 ARCHIVE_NODE_ENDPOINT=wss://rpc.polkadot.io MAX_LAG=1 yarn start",
    "start:kusama": "PRISMA_ENDPOINT=http://127.0.0.1:4466 START_FROM=2872538 ARCHIVE_NODE_ENDPOINT=wss://kusama-rpc.polkadot.io MAX_LAG=1 yarn start",
    "local:reset": "yarn reset && yarn start:local",
    "start": "node -r ts-node/register --max-old-space-size=8192 ./src/index.ts",
    "api:bump": "yarn add @polkadot/api @polkadot/dev"
  },
  "dependencies": {
    "@polkadot/api": "^2.10.1",
    "p-retry": "^4.2.0",
    "prisma-client-lib": "1.34.10"
  },
  "devDependencies": {
    "@polkadot/dev": "^0.60.29",
    "@types/bn.js": "^4.11.6",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "prettier": "1.19.1",
    "prisma1": "^1.34.11",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  },
  "resolutions": {
    "kind-of": ">=6.0.3"
  }
}
